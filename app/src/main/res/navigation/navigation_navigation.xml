<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_navigation"
    app:startDestination="@id/blankFragment">
    <!--app:startDestination	默认的起始位置-->
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.sq26.experience.ui.fragment.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank">
        <!--        声明了这样一个Action标签，这是一个 导航的行为-->
        <!--id:id作为Action唯一的 标识,我们通过id指向对应的行为
        app:destination	跳转完成到达的fragment的（目的地）Id
        app:popUpTo	将fragment从栈中弹出，直到某个Id的fragment-->
        <action
            android:id="@+id/action_blankFragment_to_blank2Fragment"
            app:destination="@id/blank2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/blank2Fragment"
        android:name="com.sq26.experience.ui.fragment.Blank2Fragment"
        android:label="fragment_blank2"
        tools:layout="@layout/fragment_blank2">
        <argument
            android:name="EMAIL"
            android:defaultValue="2005@qq.com"
            app:argType="string" />
    </fragment>
</navigation>