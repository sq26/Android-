<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".activity.AudioControllerActivity">

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_ALARM 警报"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/alarmSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/alarmText" />

    <TextView
        android:id="@+id/musicText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_MUSIC 音乐回放即媒体音量"
        app:layout_constraintTop_toBottomOf="@id/alarmSeekBar" />

    <SeekBar
        android:id="@+id/musicSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/musicText" />


    <TextView
        android:id="@+id/notificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_NOTIFICATION 窗口顶部状态栏Notification即通知"
        app:layout_constraintTop_toBottomOf="@id/musicSeekBar" />

    <SeekBar
        android:id="@+id/notificationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/notificationText" />

    <TextView
        android:id="@+id/lingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_RING 铃声"
        app:layout_constraintTop_toBottomOf="@id/notificationSeekBar" />

    <SeekBar
        android:id="@+id/ringSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lingText" />

    <TextView
        android:id="@+id/systemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_SYSTEM 系统"
        app:layout_constraintTop_toBottomOf="@id/ringSeekBar" />

    <SeekBar
        android:id="@+id/systemSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/systemText" />

    <TextView
        android:id="@+id/voiceCallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_VOICE_CALL 通话"
        app:layout_constraintTop_toBottomOf="@id/systemSeekBar" />

    <SeekBar
        android:id="@+id/voiceCallSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/voiceCallText" />

    <TextView
        android:id="@+id/DTMFText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STREAM_DTMF 双音多频,不是很明白什么东西"
        app:layout_constraintTop_toBottomOf="@id/voiceCallSeekBar" />

    <SeekBar
        android:id="@+id/DTMFSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/DTMFText" />
</android.support.constraint.ConstraintLayout>